{
  "Routes": [
    // Authentication Web API
    {
      "UpstreamPathTemplate": "/api/account",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
   "DownstreamHostAndPorts": [
        {
    "Host": "authenticationwebapi",
          "Port": 8080
        }
      ],
      "DownstreamPathTemplate": "/api/account"
    },
    // Customer Web API
    {
      "UpstreamPathTemplate": "/api/customer",
  "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
   "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "customerwebapi",
          "Port": 8080
        }
      ],
      "DownstreamPathTemplate": "/api/customer"
    },
    {
      "UpstreamPathTemplate": "/api/customer/{customerId}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
       "Host": "customerwebapi",
        "Port": 8080
        }
      ],
      "DownstreamPathTemplate": "/api/customer/{customerId}"
    },
    
    // Cart Web API
    {
      "UpstreamPathTemplate": "/api/cart",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
      {
       "Host": "cartwebapi",
        "Port": 8080
        }
      ],
      "DownstreamPathTemplate": "/api/cart"
    },
    {
      "UpstreamPathTemplate": "/api/cart/{cartItemId}",
      "UpstreamHttpMethod": [ "Put", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "cartwebapi",
          "Port": 8080
        }
      ],
      "DownstreamPathTemplate": "/api/cart/{cartItemId}"
    },
    {
      "UpstreamPathTemplate": "/api/cart/user/{userId}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
    "Host": "cartwebapi",
          "Port": 8080
        }
      ],
   "DownstreamPathTemplate": "/api/cart/user/{userId}"
    },
    {
      "UpstreamPathTemplate": "/api/cart/user/{userId}/product/{productId}",
      "UpstreamHttpMethod": [ "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
    {
          "Host": "cartwebapi",
          "Port": 8080
      }
      ],
      "DownstreamPathTemplate": "/api/cart/user/{userId}/product/{productId}"
    },
    {
      "UpstreamPathTemplate": "/api/cart/user/{userId}/clear",
"UpstreamHttpMethod": [ "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
  {
          "Host": "cartwebapi",
        "Port": 8080
        }
      ],
      "DownstreamPathTemplate": "/api/cart/user/{userId}/clear"
    },
  {
      "UpstreamPathTemplate": "/api/cart/user/{userId}/summary",
      "UpstreamHttpMethod": [ "Get" ],
 "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
   {
          "Host": "cartwebapi",
          "Port": 8080
     }
      ],
      "DownstreamPathTemplate": "/api/cart/user/{userId}/summary"
    },

    // Integration Service Web API
    {
      "UpstreamPathTemplate": "/api/sync",
      "UpstreamHttpMethod": [ "Post" ],
  "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "integrationservice",
  "Port": 8080
     }
      ],
      "DownstreamPathTemplate": "/api/sync"
    },
{
      "UpstreamPathTemplate": "/api/sync/{adapterName}",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "integrationservice",
          "Port": 8080
        }
      ],
      "DownstreamPathTemplate": "/api/sync/{adapterName}"
    },
  {
      "UpstreamPathTemplate": "/api/adapter",
   "UpstreamHttpMethod": [ "Get", "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
"Host": "integrationservice",
  "Port": 8080
        }
      ],
 "DownstreamPathTemplate": "/api/adapter"
    },
    {
      "UpstreamPathTemplate": "/api/adapter/{id}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ],
      "DownstreamScheme": "http",
    "DownstreamHostAndPorts": [
        {
          "Host": "integrationservice",
          "Port": 8080
      }
 ],
      "DownstreamPathTemplate": "/api/adapter/{id}"
    },
    {
      "UpstreamPathTemplate": "/api/adapter/{id}/activate",
      "UpstreamHttpMethod": [ "Patch" ],
      "DownstreamScheme": "http",
   "DownstreamHostAndPorts": [
        {
       "Host": "integrationservice",
     "Port": 8080
        }
  ],
      "DownstreamPathTemplate": "/api/adapter/{id}/activate"
    },
    {
      "UpstreamPathTemplate": "/api/adapter/{id}/deactivate",
      "UpstreamHttpMethod": [ "Patch" ],
    "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
     {
      "Host": "integrationservice",
          "Port": 8080
        }
      ],
    "DownstreamPathTemplate": "/api/adapter/{id}/deactivate"
    },

  // Product Web API
    {
      "UpstreamPathTemplate": "/api/product",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
     {
          "Host": "productwebapi",
  "Port": 8080
   }
      ],
      "DownstreamPathTemplate": "/api/product"
    },
    {
"UpstreamPathTemplate": "/api/product/{productId}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],
 "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productwebapi",
        "Port": 8080
    }
      ],
      "DownstreamPathTemplate": "/api/product/{productId}"
    },
    // Order Web API
    {
      "UpstreamPathTemplate": "/api/order",
   "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "orderwebapi",
    "Port": 8080
        }
      ],
  "DownstreamPathTemplate": "/api/order",
      "RateLimitOptions": {
      "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "60s",
        "PeriodTimespan": 60,
        "Limit": 1
      }
    },
    {
 "UpstreamPathTemplate": "/api/order/{orderId}",
  "UpstreamHttpMethod": [ "Get", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
    {
          "Host": "orderwebapi",
          "Port": 8080
        }
  ],
      "DownstreamPathTemplate": "/api/order/{orderId}"
  }
  ],
  "GlobalConfiguration": {
  "BaseUrl": "http://localhost:8000",
    "RateLimitOptions": {
      "QuotaExceededMessage": "Request not allowed",
      "HttpStatusCode": 429
    }
  }
}
